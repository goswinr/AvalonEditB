<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <!--net50-windows has no Thread.Abort() (for fsi canceling), 
        net 462 is maximum for Revit 2018
        net 472 for Rhino and Netstandard2.0
        Rhino can only host netFramwork apps -->
    <TargetFrameworks>net462;net472;net50-windows</TargetFrameworks>   
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <DefineConstants>TRACE</DefineConstants>
    
    <SignAssembly>true</SignAssembly>
    <!--<AssemblyOriginatorKeyFile>AvalonEditB.snk</AssemblyOriginatorKeyFile> not neded anymore? file removed -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile> <!-- for xml in bin dir-->
    <!--<DocumentationFile>AvalonEditB.xml</DocumentationFile> from main fork, puts the xml in the root dir, but it is not wanted there. -->    
    <Copyright>GoswinR &amp; AvalonEdit Contributors</Copyright>
    <Authors>GoswinR &amp; AvalonEdit Contributors</Authors>
    <Description>A fork of AvalonEdit with small changes. see Readme.md on Github repro.</Description>
    
    <Version>1.0.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    
    <ApplicationIcon>logo.ico</ApplicationIcon>
  </PropertyGroup>
  
  <PropertyGroup>
    <PackageId>AvalonEditB</PackageId>
    <Authors>GoswinR &amp; AvalonEdit Contributors</Authors>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/goswinr/AvalonEditB</PackageProjectUrl>
    <RepositoryUrl>https://github.com/goswinr/AvalonEditB</RepositoryUrl>
    <PackageIcon>logo.png</PackageIcon>
    <PackageReleaseNotes>All commits up to 6.1.1 release of AvalonEdit are included</PackageReleaseNotes>
    <!-- PackageReleaseNotes>Changes are detailed at https://github.com/icsharpcode/AvalonEdit/blob/master/ChangeLog.md</PackageReleaseNotes -->
  </PropertyGroup>

  
  <ItemGroup Condition=" '$(TargetFramework)' == 'net462' ">
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(TargetFramework)' == 'net472' ">
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>  

  <ItemGroup>
    <None Remove="Search\next.png" />
    <None Remove="Search\prev.png" />
    <None Remove="themes\RightArrow.cur" />
    <None Include="logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <Resource Include="Search\next.png" />
    <Resource Include="Search\prev.png" />
    <Resource Include="themes\RightArrow.cur" />
  </ItemGroup>
  
  <ItemGroup>
    <!-- needed for enabeling the highlighting engine: -->
    <None Remove="Highlighting\Resources\*" />
    <EmbeddedResource Include="Highlighting\Resources\*" />
    <EmbeddedResource Remove="Highlighting\Resources\Resources.cs" />
    <Resource Include="Highlighting\Resources\Resources.cs" /> 
    
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" >      
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    
  </ItemGroup>
  
  <ItemGroup>
    <Resource Include="Search\replacenext.png" />
    <Resource Include="Search\replaceall.png" />
  </ItemGroup>
</Project>