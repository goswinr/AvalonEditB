<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <!--net50-windows has no Thread.Abort() (for fsi canceling),         
        net 472 for Rhino and Netstandard2.0
        Rhino can only host netFramwork apps -->
    <TargetFrameworks>net472;net50-windows</TargetFrameworks>   
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <DefineConstants>TRACE</DefineConstants>

    <RootNamespace>AvalonEditB</RootNamespace>
    <AssemblyName>AvalonEditB</AssemblyName>
    

    <SignAssembly>true</SignAssembly>
    <!--<AssemblyOriginatorKeyFile>AvalonEditB.snk</AssemblyOriginatorKeyFile> not neded anymore? file removed -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile> <!-- for xml in bin dir-->    
    <Copyright>GoswinR</Copyright>
    <Authors>GoswinR</Authors>
    
    <Description>A fork of the TextEditor AvalonEdit with small changes.</Description>
    
    <Version>1.0.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    
    <ApplicationIcon>../AvalonEditB.Docs/logo.ico</ApplicationIcon>
  </PropertyGroup>
  
  <PropertyGroup>    
    <AssemblyTitle>AvalonEditB</AssemblyTitle>
    <Title>AvalonEditB</Title>    
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>AvalonEditB</PackageId>    
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/goswinr/AvalonEditB</PackageProjectUrl>
    <RepositoryUrl>https://github.com/goswinr/AvalonEditB</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <!-- <PackageIcon>logo128.png</PackageIcon> -->
    <!-- <PackageIconUrl>https://github.com/goswinr/AvalonEditB/AvalonEditB.Docs/logo128.png</PackageIconUrl> -->
    <PackageIcon>logo128.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageDescription>A fork of the TextEditor AvalonEdit with small changes.</PackageDescription>
    <PackageReleaseNotes>All commits up to 6.1.1 release of AvalonEdit are included.</PackageReleaseNotes>
    <PackageTags>WPF Text Editor AvalonEdit</PackageTags>
    <!-- PackageReleaseNotes>Changes are detailed at https://github.com/icsharpcode/AvalonEdit/blob/master/ChangeLog.md</PackageReleaseNotes -->
  </PropertyGroup>
  
  <ItemGroup Condition=" '$(TargetFramework)' == 'net472' ">
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>  

  <ItemGroup>
    <None Remove="Search\next.png" />
    <None Remove="Search\prev.png" />
    <None Remove="themes\RightArrow.cur" />
    <None Include="../AvalonEditB.Docs/logo128.png" Pack="true" PackagePath="\"/> <!--PackagePath = "\" makes the fike availabe to nuget pack tool-->
    <None Include="../README.md" Pack="true" PackagePath="\"/>
    <Resource Include="Search\next.png" />
    <Resource Include="Search\prev.png" />
    <Resource Include="themes\RightArrow.cur" />
  </ItemGroup>
  
  <ItemGroup>
    <!-- needed for enabeling the highlighting engine: -->
    <None Remove="Highlighting\Resources\*" />
    <EmbeddedResource Include="Highlighting\Resources\*" />
    <EmbeddedResource Remove="Highlighting\Resources\Resources.cs" />
    <Resource Include="Highlighting\Resources\Resources.cs" /> 
    
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" >      
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    
  </ItemGroup>
  
  <ItemGroup>
    <Resource Include="Search\replacenext.png" />
    <Resource Include="Search\replaceall.png" />
  </ItemGroup>
</Project>