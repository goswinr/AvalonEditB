<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <!-- no net50-windows because no Thread.Abort() in net50 (for fsi canceling), 
      net 462 is maximum for revit 2018
      net 472 for Rhino and Netstandard2.0
      Rhino can only host netFramwork apps-, -->
    <TargetFrameworks>net462;net472;net50-windows</TargetFrameworks>   
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <DefineConstants>TRACE</DefineConstants>
    <SignAssembly>true</SignAssembly>
    <!--<AssemblyOriginatorKeyFile>AvalonEditB.snk</AssemblyOriginatorKeyFile> not neded anymore? file removed -->
    <DocumentationFile>AvalonEditB.xml</DocumentationFile>
    <Company>ICSharpCode</Company>
    <Copyright>2000-2020 AlphaSierraPapa for the SharpDevelop Team</Copyright>
    <Description>AvalonEdit is the WPF-based text editor used in SharpDevelop. This Branch is used in Seff F# scripting editor </Description>
    <Version>1.0.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
  </PropertyGroup>

